<!-- Check if title exists, to display it or redirect home -->
<% if (title) { %>
<h1><%= title %></h1>
<% } else { res.redirect('/') } %> <%- messages() %> <% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<p>Confirm Deletion - The delete is permanent.</p>
<hr />
<form id="deleteForm" action="/inv/delete/" method="post">
  <label for="inv_make">Make</label>
  <input
    type="text"
    id="inv_make"
    name="inv_make"
    minlength="3"
    placeholder="Min of 3 characters"
    value="<%= locals.inv_make ? locals.inv_make : inv_make %>"
    required
    readonly
  />
  <label for="inv_model">Model</label>
  <input
    type="text"
    id="inv_model"
    name="inv_model"
    value="<%= locals.inv_model ? locals.inv_model : inv_model %>"
    required
    readonly
  />
  <label for="inv_year">Year</label>
  <input
    type="number"
    id="inv_year"
    name="inv_year"
    value="<%= locals.inv_year ? locals.inv_year : inv_year %>"
    required
    readonly
  />
  <label for="inv_price">Price</label>
  <input
    type="number"
    id="inv_price"
    name="inv_price"
    value="<%= locals.inv_price ? locals.inv_price : inv_price %>"
    required
    readonly
  />
  <input
    type="hidden"
    name="inv_id"
    value="<%= locals.inv_id ? locals.inv_id : inv_id %>"
  />
  <button>Delete</button>
</form>
